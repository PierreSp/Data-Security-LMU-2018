{
  "name": "Data Security Plugin",
  "version" : "0.6.0",
  "description": "__MSG_appDesc__",
   "permissions": ["webRequest", "webRequestBlocking", "webNavigation", "tabs", "storage", "notifications", "http://*/*", "https://*/*"],
  "icons": { "16": "img/icon.png", "128": "img/128x128.png" },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Data Security Plugin",
    "default_popup": "html/panel.html"
  },
  "background": {
    "scripts": [
      "js/md5.js",
      "js/background.js",
      "js/agent_faker.js"
    ]
  },

  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["*://*/*"],
      "js": ["js/content.js"],
      "all_frames": true
    }
  ],
  "options_page": "html/options.html",
  "default_locale": "en",
  "manifest_version": 2
}
